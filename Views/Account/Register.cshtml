@model Clouds.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register page";
    Layout = "_LayoutAccount";
}

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Login</label><br />
            <input type="text" asp-for="Login" />
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>
        <div>
            <label asp-for="Password">Password</label><br />
            <input asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Password check</label><br />
            <input asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Register" />
        </div>
    </div>
</form>