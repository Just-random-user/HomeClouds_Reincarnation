@model Clouds.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register page";
    Layout = "_LayoutAccount";
}

<p>
    Already have account?
    <a asp-action="Login" asp-controller="Account">Log in!</a>
</p>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group m-2">
            <input type="text" asp-for="Login" class="form-control" placeholder="Login"/>
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>
        <div class="form-group m-2">
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group m-2">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Password check"/>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <input type="submit" value="Register" class="text-cell btn btn-primary" />
        </div>
    </div>
</form>