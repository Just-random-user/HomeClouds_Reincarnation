@model AuthTest.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login page";
}

<h2>Login form</h2>

<p>
    Don't have an account yet?
    <a asp-action="Register" asp-controller="Account">Register!</a>
</p>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login"> Enter your login</label>
            <input type="text" asp-for="Login" />
            <span class="text-danger" asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter your password</label>
            <input asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Log in" class="btn btn-outline-dark" />
        </div>
    </div>
</form>