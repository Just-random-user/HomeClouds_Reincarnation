@model Clouds.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login page";
    Layout = "_LayoutAccount";
}

<p>
    Don't have an account yet?
    <a asp-action="Register" asp-controller="Account">Register!</a>
</p>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <input type="text" asp-for="Login" placeholder="Login"/>
            <span class="text-cell text-danger" asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Password"/>
            <span class="text-cell text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Log in" class="text-cell btn btn-primary" />
        </div>
    </div>
</form>