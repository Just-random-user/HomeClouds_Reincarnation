
@{
    ViewData["Title"] = "File explorer";
}


<h1>
    File explorer
</h1>
<h2>
    @Model?.Login
</h2>
<a asp-action="Logout" asp-controller="Account">Logout</a>

<button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Upload
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708l2-2z" />
        <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383zm.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
    </svg>
</button>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb" >
        @{
            string tmpPath = "";
            foreach (var p in Model.Path.Split(System.IO.Path.DirectorySeparatorChar))
            {
                tmpPath += p + System.IO.Path.DirectorySeparatorChar;
                <li class="breadcrumb-item"><a class="link-secondary" asp-controller="Home" asp-action="FileExplorer" asp-route-Path="@tmpPath">@p</a></li>
            }
        }
    </ol>
</nav>
<div class="row row-cols-3">
    @foreach (var f in Directory.GetDirectories(Model.Path))
    {
        <div class="col truncate">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <a asp-controller="Home" asp-action="FileExplorer" asp-route-path="@f" class="nav-link truncate">@System.IO.Path.GetFileName(f)</a>
                </div>

            </div>
        </div>

    }
    @foreach (var f in Directory.GetFiles(Model.Path))
    {
        <div class="col truncate">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    @System.IO.Path.GetFileName(f)
                </div>
                <form asp-controller="File" asp-action="Download" method="post">
                    <input hidden value="@f" type="text" asp-for="Path">
                    <button class="btn" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-arrow-down" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M7.646 10.854a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 9.293V5.5a.5.5 0 0 0-1 0v3.793L6.354 8.146a.5.5 0 1 0-.708.708l2 2z" />
                            <path d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383zm.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Upload" asp-controller="File" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Upload file</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                        Upload to path: @Model.Path
                    </div>
                    <input type="text" hidden value="@Model.Path" name="Path" asp-for="Path">
                    <input type="file" name="Upload" asp-for="Upload"/><br>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" value="Upload"/>
                </div>
            </form>
        </div>
    </div>
</div>
