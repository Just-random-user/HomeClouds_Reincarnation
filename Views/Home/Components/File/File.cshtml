@model Clouds.ViewModels.FileViewModel

<div class="card border-0 bg-transparent rounded-3" style="width:7rem;">
    <div class="card-img-top">
        <div class="dropdown">
            <a class="card-img-top position-absolute top-0 start-100 translate-middle btn btn-secondary-outlined btn-sm  dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/Icons/dots.svg" />
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item" asp-action="Download" asp-controller="File" asp-route-path="@Model.Path"><img src="~/Icons/download.svg" /> Download</a></li>
                <li><a class="dropdown-item" asp-action="Download" asp-controller="File" asp-route-path="@Model.Path"><img src="~/Icons/share.svg" /> Share</a></li>
                <li><a class="dropdown-item" asp-action="Download" asp-controller="File" asp-route-path="@Model.Path"><img src="~/Icons/delete.svg" /> Delete</a></li>
            </ul>
        </div>
        <a asp-route-path="@Model.Path" class="text-decoration-none link-secondary">
            <img src="@Model.Icon"  class="card-img-top" alt="icon">
        </a>
    </div>

    <div class="card-footer m-0 p-0 text-truncate shadow-sm">
        @Model.Name
    </div>
</div>

